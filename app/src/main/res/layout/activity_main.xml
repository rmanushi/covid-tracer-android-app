<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/deviceList"
        android:layout_width="339dp"
        android:layout_height="546dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/round_corner_shape"
        android:backgroundTint="#DCDCDC"
        android:clickable="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ListView>

    <TextView
        android:id="@+id/appNotActive"
        android:layout_width="176dp"
        android:layout_height="80dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="81dp"
        android:background="@drawable/round_corner_shape"
        android:backgroundTint="#DCDCDC"
        android:text="App is not active!"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scanBtn"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#333CE5"
        android:text="SCAN"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:icon="@android:drawable/stat_sys_data_bluetooth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text=" UPDATE PROFILE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/nearByBanner"
        android:layout_width="407dp"
        android:layout_height="19dp"
        android:background="#2196F3"
        android:backgroundTint="#03A9F4"
        android:text="Near By Users"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="571dp" />

</androidx.constraintlayout.widget.ConstraintLayout>